<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.wx.wj.mapper.BookMapper">
    <resultMap id="BaseResultMap" type="Book">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="cover" property="cover" jdbcType="VARCHAR"/>
        <result column="title" property="title" jdbcType="BIT"/>
        <result column="author" property="author" jdbcType="VARCHAR"/>
        <result column="date" property="date" jdbcType="VARCHAR"/>
        <result column="press" property="press" jdbcType="VARCHAR"/>
        <result column="abs" property="abs" jdbcType="VARCHAR"/>
        <result column="cid" property="cid" jdbcType="INTEGER"/>
    </resultMap>
    <select id="list" resultMap="BaseResultMap">
        select * from book
    </select>
    <insert id="addBook">
        insert into book (id, cover, title, author, date, press, abs, cid
            )
        values (#{id}, #{cover}, #{title}, #{author}, #{date}, #{press}, #{abs}, #{cid}
            )
    </insert>
</mapper>